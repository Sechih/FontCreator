<?xml version="1.0" encoding="UTF-8"?>
<!-- /** \brief Общая конфигурация инсталлятора */ -->
<Installer>
  <Name>FontCreator</Name>
  <Version>1.0.0</Version>
  <Title>FontCreator Installer</Title>
  <Publisher>Ваша компания</Publisher>
  <ProductUrl>https://example.local</ProductUrl>
  <TargetDir>@ApplicationsDir@/FontCreator</TargetDir>
  <StartMenuDir>FontCreator</StartMenuDir>
  <WizardStyle>Modern</WizardStyle>
  <AllowNonAsciiCharacters>true</AllowNonAsciiCharacters>
  <InstallerApplicationIcon>app.ico</InstallerApplicationIcon>   <!-- по желанию -->
  <InstallerWindowIcon>app.ico</InstallerWindowIcon>             <!-- по желанию -->
</Installer>
